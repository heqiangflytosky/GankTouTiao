<resources>

    <!-- Base application theme. -->
    <style name="LightTheme.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary</item>
        <item name="colorAccent">@color/accent_blue</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary</item>
        <item name="colorAccent">@color/accent_blue</item>
    </style>

    <style name="MainActivityTheme" parent="@style/LightTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ArticleDetailActivityTheme" parent="@style/LightTheme.NoActionBar">

    </style>

    <style name="AboutMeActivityTheme" parent="@style/LightTheme.NoActionBar">

    </style>

    <style name="BaseListActivityTheme" parent="@style/LightTheme.NoActionBar">

    </style>

    <style name="RecyclerItemTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppTheme.DeepLine" parent="@style/AppTheme">
        <item name="android:background">#ffdddddd</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <style name="item_footer">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#44000000</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2.0dip</item>
    </style>
    <style name="item_header">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/text_item_header</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">4.0dip</item>
    </style>

    <style name="ToolBarTopTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/page_title_text_color</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolBarBottomTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AboutMeItemPrimaryTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AboutMeItemSecondaryTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#ffcacaca</item>
    </style>

    <style name="AboutMeItemTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="AboutMeItemContentTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#aa000000</item>
        <item name="android:autoLink">web</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="TextAppearance.Small.EmptyView" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#4d000000</item>
    </style>

    <style name="TextAppearance.Small.EmptyView.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B3000000</item>
    </style>

    <style name="TextAppearance.Small.EmptyView.Summary">
        <item name="android:textColor">#000000</item>
    </style>

</resources>
