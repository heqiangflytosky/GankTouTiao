<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selectable_item_background"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12.0dip"
        android:paddingTop="0.0dip"
        android:paddingRight="12.0dip"
        android:paddingBottom="4.0dip"
        android:layout_marginTop="12.0dip"
        android:orientation="vertical">
        <TextView
            android:id="@+id/content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16.0sp"
            android:textColor="@color/text_color_primary"
            android:ellipsize="end"
            android:layout_margin="4.0dip"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/content_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13.0sp"
            android:textColor="@color/text_color_secondary"
            android:ellipsize="end"
            android:layout_margin="4.0dip"
            android:maxLines="2"
            android:minLines="2"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_footer_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_unknown"
                android:padding="4.0dip"
                android:background="@drawable/selectable_item_background_transparent"
                android:drawableLeft="@drawable/ic_content_type"
                android:visibility="gone"
                style="@style/item_footer"/>
            <TextView
                android:id="@+id/item_footer_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_anonymous"
                android:padding="4.0dip"
                android:background="@drawable/selectable_item_background_transparent"
                android:drawableLeft="@drawable/ic_content_from"
                style="@style/item_footer"/>
            <TextView
                android:id="@+id/item_footer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_unknown"
                android:padding="4.0dip"
                android:background="@drawable/selectable_item_background_transparent"
                android:drawableLeft="@drawable/ic_content_time"
                style="@style/item_footer"/>
        </LinearLayout>

    </LinearLayout>

    <View style="@style/AppTheme.DeepLine" />

</LinearLayout>