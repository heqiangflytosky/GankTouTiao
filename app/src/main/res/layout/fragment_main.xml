<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivityFragment"
              android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_top_height"
        android:background="@color/main_color"
        app:tabMode="scrollable"
        app:tabMinWidth="75dp"
        app:tabTextAppearance="@style/TabTextAppearance"
        app:tabBackground="@color/main_color"
        app:tabIndicatorColor="@color/tab_bottom_line_color"
        app:tabSelectedTextColor="@color/tab_text_color"
        app:tabTextColor="@color/tab_text_color_selected"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

</LinearLayout>
